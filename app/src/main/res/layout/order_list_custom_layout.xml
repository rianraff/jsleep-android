<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="3dp"
    android:background="@drawable/rounded_border_universal_3"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/room_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:src="@drawable/icon_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Date Interval"
        android:textColor="@color/biru_ganteng"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/payment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Status"
        android:textColor="@color/biru_ganteng"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toBottomOf="@+id/payment_date" />

</androidx.constraintlayout.widget.ConstraintLayout>