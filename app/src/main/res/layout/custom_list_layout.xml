<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"

    android:background="@drawable/rounded_lvitem"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/room_icon"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_margin="5dp"
        android:src="@drawable/icon_hotel_listview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/urbanist_semiBold"
        android:text="Hotel Mulia Senayan Jakarta"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_address"
        android:layout_width="287dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/urbanist_regular"
        android:text="Jalan Asia Afrika Senayan, RT.1/RW.3, Gelora, Kecamatan Tanah Abang, Kota Jakarta Pusat."
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toBottomOf="@+id/room_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

