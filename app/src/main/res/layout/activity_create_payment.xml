<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    android:padding="40dp"

    >

    <ImageView
        android:id="@+id/backCreatePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/paymentdetail_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/Urbanist_Bold"

        android:text="Select Date"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/backCreatePayment"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_lvitem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentdetail_title">

        <ImageView
            android:id="@+id/paymentdetail_title_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_hotel_listview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paymentdetail_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/Urbanist_Bold"
            android:text="Hotel Mulia"
            android:textColor="@color/white"
            android:textSize="23dp"
            app:layout_constraintStart_toEndOf="@+id/paymentdetail_title_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="213dp"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:drawableStart="@drawable/icon_mappin"
            android:drawablePadding="5dp"
            android:fontFamily="@font/Urbanist_Bold"
            android:text="Jalan Asia Afrika Senayan, RT.1/RW.3, Gelora."
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/paymentdetail_title_icon"
            app:layout_constraintTop_toBottomOf="@+id/paymentdetail_title_name"
            app:layout_goneMarginTop="8dp" />


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCalender"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_lvitem"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <CalendarView
            android:id="@+id/paymentdetail_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/biru_ganteng"
            android:dateTextAppearance="@style/CalendarViewDateTextAppearance"
            android:theme="@style/CalenderViewCustom"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/paymentdetail_edittext_start"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="13dp"

        android:background="@drawable/rounded_textview"
        android:fontFamily="@font/Urbanist_Medium"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutCalender" />

    <TextView
        android:id="@+id/checkIn"
        android:layout_width="130dp"
        android:layout_height="26dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/Urbanist_SemiBold"
        android:text="Check In"
        android:textAlignment="center"
        android:textColor="@color/biru_ganteng"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCalender" />

    <EditText
        android:id="@+id/paymentdetail_edittext_end"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/rounded_textview"
        android:fontFamily="@font/Urbanist_Medium"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutCalender" />

    <TextView
        android:id="@+id/checkOut"
        android:layout_width="130dp"
        android:layout_height="26dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="@font/Urbanist_SemiBold"
        android:text="Check Out"
        android:textAlignment="center"
        android:textColor="@color/biru_ganteng"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCalender" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/paymentdetail_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/Urbanist_Bold"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>