<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"

    android:background="@drawable/rounded_border_universal_3"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/room_icon"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_margin="5dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/icon_hotel_listview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Patrick Star House"
        android:textColor="@color/biru_ganteng"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Jl. Bikini Bottom Raya. No. 12"
        android:textColor="@color/biru_ganteng"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/room_icon"
        app:layout_constraintTop_toBottomOf="@+id/room_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>